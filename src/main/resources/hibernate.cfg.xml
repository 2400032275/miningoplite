<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- MySQL Database Connection Settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mineops_lite?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        
        <!-- Hibernate Settings -->
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.jdbc.batch_size">20</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        
        <!-- Connection Pooling (C3P0) -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">1800</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        
        <!-- Logging -->
        <property name="hibernate.generate_statistics">false</property>
        
        <!-- Entity Mappings -->
        <mapping class="com.mineops.entity.MineSite"/>
        <mapping class="com.mineops.entity.Equipment"/>
        <mapping class="com.mineops.entity.Worker"/>
        <mapping class="com.mineops.entity.ShiftLog"/>
        <mapping class="com.mineops.entity.ProductionLog"/>
        <mapping class="com.mineops.entity.EquipmentUsage"/>
        <mapping class="com.mineops.entity.SafetyIncident"/>
    </session-factory>
</hibernate-configuration>
